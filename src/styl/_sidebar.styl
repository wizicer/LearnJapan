body
  position: relative
  overflow-x: hidden
  height: 100%
html
  height: 100%
.nav .open > a
  background-color: transparent
  &:hover, &:focus
    background-color: transparent

/*------------------------------- */
/*           Wrappers */
/*------------------------------- */
#wrapper
  padding-left: 0
  -webkit-transition: all 0.5s ease
  -moz-transition: all 0.5s ease
  -o-transition: all 0.5s ease
  transition: all 0.5s ease
  &.toggled
    padding-left: 220px
#sidebar-wrapper
  z-index: 1000
  left: 220px
  width: 0
  height: 100%
  margin-left: -1*220px
  overflow-y: auto
  overflow-x: hidden
  background: #1a1a1a
  -webkit-transition: all 0.5s ease
  -moz-transition: all 0.5s ease
  -o-transition: all 0.5s ease
  transition: all 0.5s ease
  &::-webkit-scrollbar
    display: none
#wrapper.toggled #sidebar-wrapper
  width: 220px
#page-content-wrapper
  width: 100%
  padding-top: 70px
#wrapper.toggled #page-content-wrapper
  position: absolute
  margin-right: -1*220px

/*------------------------------- */
/*     Sidebar nav styles */
/*------------------------------- */
.sidebar-nav
  position: absolute
  top: 0
  width: 220px
  margin: 0
  padding: 0
  list-style: none
  li
    position: relative
    line-height: 20px
    display: inline-block
    width: 100%
    &:before
      content: ""
      position: absolute
      top: 0
      left: 0
      z-index: -1*1
      height: 100%
      width: 3px
      background-color: #1c1c1c
      -webkit-transition: width 0.2s ease-in
      -moz-transition: width 0.2s ease-in
      -ms-transition: width 0.2s ease-in
      transition: width 0.2s ease-in
    &:first-child a
      color: white
      background-color: #1a1a1a
    &:nth-child(2):before
      background-color: #ec1b5a
    &:nth-child(3):before
      background-color: #79aefe
    &:nth-child(4):before
      background-color: #314190
    &:nth-child(5):before
      background-color: #279636
    &:nth-child(6):before
      background-color: #7d5d81
    &:nth-child(7):before
      background-color: #ead24c
    &:nth-child(8):before
      background-color: #2d2366
    &:nth-child(9):before
      background-color: #35acdf
    &:hover:before, &.open:hover:before
      width: 100%
      -webkit-transition: width 0.2s ease-in
      -moz-transition: width 0.2s ease-in
      -ms-transition: width 0.2s ease-in
      transition: width 0.2s ease-in
    a
      display: block
      color: #dddddd
      text-decoration: none
      padding: 10px 15px 10px 30px
      &:hover, &:active, &:focus
        color: white
        text-decoration: none
        background-color: transparent
    &.open a
      &:hover, &:active, &:focus
        color: white
        text-decoration: none
        background-color: transparent
  > .sidebar-brand
    height: 65px
    font-size: 20px
    line-height: 44px
  .dropdown-menu
    position: relative
    width: 100%
    padding: 0
    margin: 0
    border-radius: 0
    border: none
    background-color: #222222
    box-shadow: none

/*------------------------------- */
/*       Hamburger-Cross */
/*------------------------------- */
.hamburger
  position: fixed
  top: 20px
  z-index: 999
  display: block
  width: 32px
  height: 32px
  margin-left: 15px
  background: transparent
  border: none
  &:hover, &:focus, &:active
    outline: none
  &.is-closed
    &:before
      content: ""
      display: block
      width: 100px
      font-size: 14px
      color: white
      line-height: 32px
      text-align: center
      opacity: 0
      -webkit-transform: translate3d(0, 0, 0)
      -webkit-transition: all 0.35s ease-in-out
    &:hover:before
      opacity: 1
      display: block
      -webkit-transform: translate3d(-100px, 0, 0)
      -webkit-transition: all 0.35s ease-in-out
    .hamb-top, .hamb-middle, .hamb-bottom
      position: absolute
      left: 0
      height: 4px
      width: 100%
  &.is-open
    .hamb-top, .hamb-middle, .hamb-bottom
      position: absolute
      left: 0
      height: 4px
      width: 100%
  &.is-closed
    .hamb-top, .hamb-middle, .hamb-bottom
      background-color: #1a1a1a
    .hamb-top
      top: 5px
      -webkit-transition: all 0.35s ease-in-out
    .hamb-middle
      top: 50%
      margin-top: -1*2px
    .hamb-bottom
      bottom: 5px
      -webkit-transition: all 0.35s ease-in-out
    &:hover
      .hamb-top
        top: 0
        -webkit-transition: all 0.35s ease-in-out
      .hamb-bottom
        bottom: 0
        -webkit-transition: all 0.35s ease-in-out
  &.is-open
    .hamb-top, .hamb-middle, .hamb-bottom
      background-color: #1a1a1a
    .hamb-top, .hamb-bottom
      top: 50%
      margin-top: -1*2px
    .hamb-top
      -webkit-transform: rotate(45deg)
      -webkit-transition: -webkit-transform 0.2s cubic-bezier(0.73, 1, 0.28, 0.08)
    .hamb-middle
      display: none
    .hamb-bottom
      -webkit-transform: rotate(-45deg)
      -webkit-transition: -webkit-transform 0.2s cubic-bezier(0.73, 1, 0.28, 0.08)
    &:before
      content: ""
      display: block
      width: 100px
      font-size: 14px
      color: white
      line-height: 32px
      text-align: center
      opacity: 0
      -webkit-transform: translate3d(0, 0, 0)
      -webkit-transition: all 0.35s ease-in-out
    &:hover:before
      opacity: 1
      display: block
      -webkit-transform: translate3d(-100px, 0, 0)
      -webkit-transition: all 0.35s ease-in-out

/*------------------------------- */
/*            Overlay */
/*------------------------------- */
.overlay
  position: fixed
  display: none
  width: 100%
  height: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: rgba(250, 250, 250, 0.8)
  z-index: 1
